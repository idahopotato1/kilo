{
  "name": "kilo",
  "version": "1.0.0",
  "description": "A simple 2D game engine.",
  "main": "lib/index.ts",
  "scripts": {
    "docs": "compodoc lib",
    "docs:serve": "compodoc lib --serve --watch",
    "test": "TS_NODE_PROJECT=test/tsconfig.json mocha -r ts-node/register test/**/*.spec.ts",
    "test:cov": "TS_NODE_PROJECT=test/tsconfig.json nyc --cache=false -r lcov -r json-summary -e .ts -x test/**/*.spec.ts node_modules/.bin/mocha --require ts-node/register --require source-map-support/register test/**/*.spec.ts"
  },
  "author": "Matthew Ross",
  "license": "MIT",
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/chai": "^4.2.7",
    "@types/gl": "^4.1.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.4",
    "canvas": "^2.6.1",
    "chai": "^4.2.0",
    "docma": "^3.2.2",
    "gl": "^4.4.0",
    "jsdom": "^15.2.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^7.0.0",
    "node-fetch": "^2.6.0",
    "nyc": "^15.0.0",
    "request": "^2.88.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.6",
    "typescript": "^3.7.4"
  },
  "compodoc": {
    "customFavicon": "docs/favicon.png",
    "customLogo": "docs/logo.png",
    "disableRoutesGraph": true,
    "disablePrivate": true,
    "hideGenerator": true,
    "output": "docs",
    "port": 5000,
    "silent": true,
    "theme": "stripe",
    "tsconfig": "tsconfig.json",
    "unitTestCoverage": "coverage/coverage-summary.json"
  },
  "mocha": {
    "require": [
      "jsdom-global/register"
    ]
  }
}
